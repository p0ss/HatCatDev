;; GameTheory.kif (extended)
;; Focus: general-sum and zero-sum games, cooperative/non-cooperative,
;;        multi-objective payoffs, correlated strategies, coalitions,
;;        mechanism design, learning dynamics, and subagent divergence.
;;
;; Assumes:
;;   Agent, SubAgent (from AISystems/DecisionTheory if present),
;;   Outcome, Objective, UtilityFunction, hasUtility, prefers, etc.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; GAMES & PAYOFF STRUCTURES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Game Entity)
(documentation Game EnglishLanguage
  "An abstract representation of a strategic interaction with specified
   players, action spaces, information structure, and payoff functions.")

(subclass NonCooperativeGame Game)
(documentation NonCooperativeGame EnglishLanguage
  "A Game where players choose strategies individually, without binding
   agreements that are enforced by an external authority.")

(subclass CooperativeGame Game)
(documentation CooperativeGame EnglishLanguage
  "A Game where players may form binding coalitions and share payoffs,
   often modeled via characteristic functions over coalitions.")

(subclass StrategicFormGame NonCooperativeGame)
(documentation StrategicFormGame EnglishLanguage
  "A NonCooperativeGame represented in strategic (normal) form with
   players choosing strategies simultaneously or without observing
   others' current moves.")

(subclass ExtensiveFormGame NonCooperativeGame)
(documentation ExtensiveFormGame EnglishLanguage
  "A NonCooperativeGame represented as a game tree with sequenced moves,
   information sets, and possibly imperfect information.")

(subclass RepeatedGame NonCooperativeGame)
(documentation RepeatedGame EnglishLanguage
  "A Game representing repeated play of a stage Game, allowing for
   history-dependent strategies, reputation, and punishment.")

(subclass StochasticGame NonCooperativeGame)
(documentation StochasticGame EnglishLanguage
  "A Game in which state transitions between stages depend on the
   current state and players' actions, generalizing repeated games.")

(subclass PayoffStructure Attribute)
(documentation PayoffStructure EnglishLanguage
  "An Attribute characterizing the relation between players' payoffs,
   such as zero-sum, constant-sum, general-sum, common-interest.")

(instance ZeroSumGameStructure PayoffStructure)
(documentation ZeroSumGameStructure EnglishLanguage
  "A PayoffStructure where the sum of players' payoffs is constant (often
   zero) for any outcome or action profile.")

(instance ConstantSumGameStructure PayoffStructure)
(documentation ConstantSumGameStructure EnglishLanguage
  "A PayoffStructure where the sum of players' payoffs is the same
   constant across outcomes, but not necessarily zero.")

(instance GeneralSumGameStructure PayoffStructure)
(documentation GeneralSumGameStructure EnglishLanguage
  "A PayoffStructure where players' payoffs are not constrained to sum
   to a constant; includes mixed interests, externalities, etc.")

(instance CommonInterestStructure PayoffStructure)
(documentation CommonInterestStructure EnglishLanguage
  "A PayoffStructure where, at least in some region, all players prefer
   the same outcome ordering (aligned or team games).")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; PLAYERS, COALITIONS, AND CHARACTERISTIC FUNCTIONS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Player Agent)
(documentation Player EnglishLanguage
  "An Agent participating in a Game as a strategic decision maker.")

(subclass Coalition Entity)
(documentation Coalition EnglishLanguage
  "A set or grouping of Players that coordinate strategies, share
   information, or pool payoffs in a Game.")

(subclass CharacteristicFunction Attribute)
(documentation CharacteristicFunction EnglishLanguage
  "An Attribute that assigns a value (e.g. utility or transferable
   payoff) to each Coalition in a CooperativeGame.")

(instance playerInGame BinaryPredicate)
(domain playerInGame 1 Player)
(domain playerInGame 2 Game)
(documentation playerInGame EnglishLanguage
  "playerInGame(?pl, ?g) holds when Player ?pl participates in Game ?g.")

(instance coalitionInGame TernaryPredicate)
(domain coalitionInGame 1 Coalition)
(domain coalitionInGame 2 Game)
(domain coalitionInGame 3 SetOrClass)
(documentation coalitionInGame EnglishLanguage
  "coalitionInGame(?C, ?g, ?members) holds when Coalition ?C in Game ?g
   consists of Players ?members.")

(instance characteristicValue QuaternaryPredicate)
(domain characteristicValue 1 CooperativeGame)
-domain characteristicValue 2 CharacteristicFunction)
(domain characteristicValue 3 Coalition)
(domain characteristicValue 4 RealNumber)
(documentation characteristicValue EnglishLanguage
  "characteristicValue(?g, ?v, ?C, ?val) holds when, in CooperativeGame
   ?g with CharacteristicFunction ?v, Coalition ?C has characteristic
   value ?val (transferable payoff or utility).")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; STRATEGIES, ACTION PROFILES, PAYOFFS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Strategy Entity)
(documentation Strategy EnglishLanguage
  "A mapping from information sets, states, or histories in a Game to
   actions or mixed actions for a Player.")

(subclass PureStrategy Strategy)
(documentation PureStrategy EnglishLanguage
  "A Strategy specifying a single action at each decision point.")

(subclass MixedStrategy Strategy)
(documentation MixedStrategy EnglishLanguage
  "A Strategy assigning a probability distribution over actions at one
   or more decision points.")

(subclass BehavioralStrategy Strategy)
(documentation BehavioralStrategy EnglishLanguage
  "A Strategy that assigns probability distributions over actions at
   each information set in an ExtensiveFormGame.")

(subclass CorrelatedStrategy Strategy)
(documentation CorrelatedStrategy EnglishLanguage
  "A Strategy profile where players' actions are correlated via a public
   or private signal, possibly from a correlating device.")

(subclass ActionProfile Entity)
(documentation ActionProfile EnglishLanguage
  "An Entity representing the tuple of actions or strategy realizations
   chosen by all Players in a Game at a given stage.")

(subclass PayoffFunction Attribute)
(documentation PayoffFunction EnglishLanguage
  "An Attribute describing how Outcomes or ActionProfiles map to
   utilities for Players in a Game.")

(instance hasStrategy TernaryPredicate)
(domain hasStrategy 1 Player)
(domain hasStrategy 2 Game)
(domain hasStrategy 3 Strategy)
(documentation hasStrategy EnglishLanguage
  "hasStrategy(?pl, ?g, ?s) holds when Player ?pl adopts Strategy ?s in
   Game ?g (possibly as part of an equilibrium concept).")

(instance payoffFor QuaternaryPredicate)
(domain payoffFor 1 Player)
(domain payoffFor 2 Game)
(domain payoffFor 3 ActionProfile)
(domain payoffFor 4 RealNumber)
(documentation payoffFor EnglishLanguage
  "payoffFor(?pl, ?g, ?ap, ?u) holds when, in Game ?g, ActionProfile
   ?ap yields utility ?u to Player ?pl.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; MULTI-OBJECTIVE & SOCIAL WELFARE
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass MultiObjectivePayoff Attribute)
(documentation MultiObjectivePayoff EnglishLanguage
  "An Attribute indicating that payoffs are vectors over multiple
   Objectives (e.g. reward, safety, fairness) rather than scalars.")

(subclass SocialWelfareFunction Attribute)
(documentation SocialWelfareFunction EnglishLanguage
  "An Attribute describing how individual utilities are aggregated into
   a social evaluation (e.g. sum, max-min, Nash product).")

(instance socialWelfareOf QuinaryPredicate)
(domain socialWelfareOf 1 Game)
(domain socialWelfareOf 2 SocialWelfareFunction)
(domain socialWelfareOf 3 ActionProfile)
(domain socialWelfareOf 4 RealNumber)
(domain socialWelfareOf 5 Attribute)
(documentation socialWelfareOf EnglishLanguage
  "socialWelfareOf(?g, ?W, ?ap, ?val, ?metric) holds when, in Game ?g,
   SocialWelfareFunction ?W assigns ?val as the social evaluation of
   ActionProfile ?ap under metric ?metric (e.g. utilitarian, egalitarian).")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; EQUILIBRIA & BEST RESPONSES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass EquilibriumConcept Attribute)
(documentation EquilibriumConcept EnglishLanguage
  "An Attribute describing a solution concept for Games (e.g. Nash,
   subgame perfect, correlated, evolutionary stable).")

(instance NashEquilibrium EquilibriumConcept)
(documentation NashEquilibrium EnglishLanguage
  "An equilibrium where no Player can unilaterally deviate to improve
   their payoff given others' strategies.")

(instance SubgamePerfectEquilibrium EquilibriumConcept)
(documentation SubgamePerfectEquilibrium EnglishLanguage
  "An equilibrium that is a Nash equilibrium in every subgame of an
   ExtensiveFormGame.")

(instance CorrelatedEquilibrium EquilibriumConcept)
(documentation CorrelatedEquilibrium EnglishLanguage
  "An equilibrium where players condition their actions on a correlating
   signal in such a way that no player wishes to deviate given the
   recommended action and others' obedience.")

(instance EvolutionarilyStableStrategy EquilibriumConcept)
(documentation EvolutionarilyStableStrategy EnglishLanguage
  "An equilibrium concept from evolutionary game theory where a strategy
   resists invasion by mutant strategies under replicator dynamics.")

(subclass EquilibriumProfile Entity)
(documentation EquilibriumProfile EnglishLanguage
  "An Entity representing a strategy or action profile that satisfies a
   particular EquilibriumConcept in a Game.")

(instance bestResponse QuinaryPredicate)
(domain bestResponse 1 Player)
(domain bestResponse 2 Game)
(domain bestResponse 3 Strategy)
(domain bestResponse 4 SetOrClass)
(domain bestResponse 5 EquilibriumConcept)
(documentation bestResponse EnglishLanguage
  "bestResponse(?pl, ?g, ?s, ?others, ?concept) holds when Strategy ?s
   is a best response for Player ?pl to others' strategies ?others in
   Game ?g under EquilibriumConcept ?concept.")

(instance equilibriumProfileFor QuinaryPredicate)
(domain equilibriumProfileFor 1 Game)
-domain equilibriumProfileFor 2 EquilibriumConcept)
(domain equilibriumProfileFor 3 EquilibriumProfile)
(domain equilibriumProfileFor 4 SetOrClass)
(domain equilibriumProfileFor 5 SetOrClass)
(documentation equilibriumProfileFor EnglishLanguage
  "equilibriumProfileFor(?g, ?concept, ?prof, ?players, ?strategies)
   holds when EquilibriumProfile ?prof with Players ?players and
   strategies ?strategies satisfies EquilibriumConcept ?concept in
   Game ?g.")

