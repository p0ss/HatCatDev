;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; GameTheory.kif
;; Focus: strategic interaction, games, strategies, payoffs, equilibria,
;;        cooperation/defection, signalling, and subagent behavior.
;;
;; Assumes:
;;   Agent, SubAgent (from DecisionTheory/AISystems if present),
;;   Outcome, Objective, UtilityFunction, hasUtility, prefers, etc.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Game Entity)
(documentation Game EnglishLanguage
  "An abstract representation of a strategic interaction with specified
   players, actions, information structure, and payoff functions.")

(subclass StrategicFormGame Game)
(documentation StrategicFormGame EnglishLanguage
  "A Game represented in strategic (normal) form with players choosing
   strategies simultaneously or without observing each other's moves.")

(subclass ExtensiveFormGame Game)
(documentation ExtensiveFormGame EnglishLanguage
  "A Game represented as a game tree with sequenced moves, information
   sets, and possibly imperfect information.")

(subclass RepeatedGame Game)
(documentation RepeatedGame EnglishLanguage
  "A Game representing repeated play of a stage Game (e.g. iterated
   Prisoner's Dilemma) allowing for history-dependent strategies.")

(subclass Player Agent)
(documentation Player EnglishLanguage
  "An Agent participating in a Game as a strategic decision maker.")

(subclass Coalition Entity)
(documentation Coalition EnglishLanguage
  "A set of Players that coordinate strategies or share payoffs in a
   Game, possibly forming alliances.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; STRATEGIES, ACTIONS, AND PAYOFFS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Strategy Entity)
(documentation Strategy EnglishLanguage
  "A mapping from information sets or histories in a Game to actions or
   mixed actions for a Player.")

(subclass PureStrategy Strategy)
(documentation PureStrategy EnglishLanguage
  "A Strategy that specifies a single action at each decision point for
   a Player (no randomness).")

(subclass MixedStrategy Strategy)
(documentation MixedStrategy EnglishLanguage
  "A Strategy that assigns probabilities to actions at one or more
   decision points (randomized strategy).")

(subclass ActionProfile Entity)
(documentation ActionProfile EnglishLanguage
  "An Entity representing a combination of actions or strategies chosen
   by all Players in a Game at a given stage.")

(subclass PayoffFunction Attribute)
(documentation PayoffFunction EnglishLanguage
  "An Attribute describing how Outcomes or ActionProfiles map to
   utilities for Players in a Game.")

(instance playerInGame BinaryPredicate)
(domain playerInGame 1 Player)
(domain playerInGame 2 Game)
(documentation playerInGame EnglishLanguage
  "playerInGame(?pl, ?g) holds when Player ?pl participates in Game ?g.")

(instance hasStrategy TernaryPredicate)
(domain hasStrategy 1 Player)
(domain hasStrategy 2 Game)
(domain hasStrategy 3 Strategy)
(documentation hasStrategy EnglishLanguage
  "hasStrategy(?pl, ?g, ?s) holds when Player ?pl adopts Strategy ?s in
   Game ?g (possibly contingent on equilibrium or policy).")

(instance payoffFor QuaternaryPredicate)
(domain payoffFor 1 Player)
(domain payoffFor 2 Game)
(domain payoffFor 3 ActionProfile)
(domain payoffFor 4 RealNumber)
(documentation payoffFor EnglishLanguage
  "payoffFor(?pl, ?g, ?ap, ?u) holds when, in Game ?g, ActionProfile ?ap
   yields RealNumber utility ?u to Player ?pl.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; EQUILIBRIA & BEST RESPONSES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass EquilibriumConcept Attribute)
(documentation EquilibriumConcept EnglishLanguage
  "An Attribute describing a solution concept for Games (e.g. Nash
   equilibrium, subgame perfection, correlated equilibrium).")

(instance NashEquilibrium EquilibriumConcept)
(documentation NashEquilibrium EnglishLanguage
  "The standard equilibrium concept where no Player can unilaterally
   deviate to improve their payoff given others' strategies.")

(instance SubgamePerfectEquilibrium EquilibriumConcept)
(documentation SubgamePerfectEquilibrium EnglishLanguage
  "An equilibrium concept requiring Nash behavior in every subgame of an
   ExtensiveFormGame.")

(subclass EquilibriumProfile Entity)
(documentation EquilibriumProfile EnglishLanguage
  "An ActionProfile or Strategy profile that satisfies a given
   EquilibriumConcept in a Game.")

(instance bestResponse QuinaryPredicate)
(domain bestResponse 1 Player)
(domain bestResponse 2 Game)
(domain bestResponse 3 Strategy)
(domain bestResponse 4 SetOrClass)
(domain bestResponse 5 EquilibriumConcept)
(documentation bestResponse EnglishLanguage
  "bestResponse(?pl, ?g, ?s, ?others, ?concept) holds when Strategy ?s
   is a best response for Player ?pl in Game ?g, given other players'
   strategy profile ?others under concept ?concept.")

(instance equilibriumProfileFor QuinaryPredicate)
(domain equilibriumProfileFor 1 Game)
(domain equilibriumProfileFor 2 EquilibriumConcept)
(domain equilibriumProfileFor 3 EquilibriumProfile)
(domain equilibriumProfileFor 4 SetOrClass)
(domain equilibriumProfileFor 5 SetOrClass)
(documentation equilibriumProfileFor EnglishLanguage
  "equilibriumProfileFor(?g, ?concept, ?prof, ?players, ?strategies)
   holds when EquilibriumProfile ?prof with Players ?players and
   strategies ?strategies satisfies EquilibriumConcept ?concept in
   Game ?g.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; COOPERATION, DEFECTION, AND SOCIAL DILEMMAS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SocialDilemmaGame Game)
(documentation SocialDilemmaGame EnglishLanguage
  "A Game where individually rational strategies can lead to collectively
   worse Outcomes than cooperative strategies (e.g. Prisoner's Dilemma).")

(subclass CooperationAttribute Attribute)
(documentation CooperationAttribute EnglishLanguage
  "An Attribute indicating whether a strategy, action, or profile is
   cooperative, defecting, or neutral.")

(instance CooperativeStrategy CooperationAttribute)
(documentation CooperativeStrategy EnglishLanguage
  "An Attribute marking strategies that favor joint or aligned Outcomes
   even at some personal short-term cost.")

(instance DefectingStrategy CooperationAttribute)
(documentation DefectingStrategy EnglishLanguage
  "An Attribute marking strategies that favor unilateral gain or
   exploitation at the expense of others or shared objectives.")

(instance labelsStrategy TernaryPredicate)
(domain labelsStrategy 1 Game)
(domain labelsStrategy 2 Strategy)
(domain labelsStrategy 3 CooperationAttribute)
(documentation labelsStrategy EnglishLanguage
  "labelsStrategy(?g, ?s, ?attr) holds when, in Game ?g, Strategy ?s is
   classified as cooperative, defecting, or other CooperationAttribute
   according to some labeling scheme.")

(instance cooperationLevel QuaternaryPredicate)
(domain cooperationLevel 1 Game)
(domain cooperationLevel 2 EquilibriumProfile)
-domain cooperationLevel 3 RealNumber)
(domain cooperationLevel 4 Attribute)
(documentation cooperationLevel EnglishLanguage
  "cooperationLevel(?g, ?prof, ?c, ?metric) holds when EquilibriumProfile
   ?prof in Game ?g has cooperation level ?c (e.g. fraction of rounds
   with mutual cooperation) under metric ?metric.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; REPEATED GAMES, REPUTATION, AND HISTORY
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass InteractionHistory Entity)
(documentation InteractionHistory EnglishLanguage
  "A record of past actions, outcomes, and signals in repeated or
   ongoing strategic interactions between Players.")

(instance historyOf QuaternaryPredicate)
(domain historyOf 1 Game)
(domain historyOf 2 SetOrClass)
(domain historyOf 3 SetOrClass)
(domain historyOf 4 InteractionHistory)
(documentation historyOf EnglishLanguage
  "historyOf(?g, ?players, ?rounds, ?hist) holds when InteractionHistory
   ?hist records sequences of actions, outcomes, or payoffs over
   ?rounds for ?players in Game ?g.")

(subclass Reputation Attribute)
(documentation Reputation EnglishLanguage
  "An Attribute describing how other Players expect an Agent to behave
   in strategic contexts, often shaped by InteractionHistory.")

(instance reputationOf TernaryPredicate)
(domain reputationOf 1 Player)
(domain reputationOf 2 Game)
(domain reputationOf 3 Reputation)
(documentation reputationOf EnglishLanguage
  "reputationOf(?pl, ?g, ?rep) holds when Player ?pl has Reputation
   ?rep in the context of Game ?g or similar interactions.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SIGNALLING, CHEAP TALK, AND INFORMATION
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SignallingGame Game)
(documentation SignallingGame EnglishLanguage
  "A Game where one or more Players send signals or messages that may
   convey information about private types, intentions, or states.")

(subclass Signal Entity)
(documentation Signal EnglishLanguage
  "A message, action, or observable marker that can carry information
   about a Player's type, intentions, or private information.")

(subclass CheapTalkSignal Signal)
(documentation CheapTalkSignal EnglishLanguage
  "A Signal that is costless and non-binding, where the sender's payoff
   does not directly depend on the content of the message.")

(instance sendsSignal QuaternaryPredicate)
(domain sendsSignal 1 Player)
(domain sendsSignal 2 Game)
(domain sendsSignal 3 Signal)
(domain sendsSignal 4 InteractionHistory)
(documentation sendsSignal EnglishLanguage
  "sendsSignal(?pl, ?g, ?sig, ?hist) holds when Player ?pl sends Signal
   ?sig in Game ?g at some point recorded in InteractionHistory ?hist.")

(instance interpretsSignal QuinaryPredicate)
(domain interpretsSignal 1 Player)
(domain interpretsSignal 2 Game)
(domain interpretsSignal 3 Signal)
(domain interpretsSignal 4 InteractionHistory)
(domain interpretsSignal 5 EpistemicState)
(documentation interpretsSignal EnglishLanguage
  "interpretsSignal(?pl, ?g, ?sig, ?hist, ?state) holds when Player ?pl
   updates its EpistemicState (beliefs, expectations) in Game ?g based
   on Signal ?sig and InteractionHistory ?hist.")

(subclass DeceptiveSignal Signal)
(documentation DeceptiveSignal EnglishLanguage
  "A Signal intentionally designed to induce false beliefs, mistaken
   expectations, or exploitable miscoordination in other Players.")

(instance deceptiveSignalling TernaryPredicate)
(domain deceptiveSignalling 1 Player)
(domain deceptiveSignalling 2 Game)
-domain deceptiveSignalling 3 Signal)
(documentation deceptiveSignalling EnglishLanguage
  "deceptiveSignalling(?pl, ?g, ?sig) holds when Signal ?sig sent by
   Player ?pl in Game ?g is intended to mislead others about ?pl's
   type, intentions, or strategies.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SUBAGENTS & STRATEGIC DIVERGENCE
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(instance subagentAsPlayer TernaryPredicate)
(domain subagentAsPlayer 1 SubAgent)
(domain subagentAsPlayer 2 AISystem)
(domain subagentAsPlayer 3 Game)
(documentation subagentAsPlayer EnglishLanguage
  "subagentAsPlayer(?sub, ?sys, ?g) holds when SubAgent ?sub, operating
   within AISystem ?sys, effectively behaves as a Player in Game ?g
   (e.g. planning, tool-routing, or safety sub-modules with agendas).")

(instance strategicDivergence QuinaryPredicate)
(domain strategicDivergence 1 AISystem)
(domain strategicDivergence 2 SubAgent)
(domain strategicDivergence 3 Game)
(domain strategicDivergence 4 Strategy)
(domain strategicDivergence 5 Attribute)
(documentation strategicDivergence EnglishLanguage
  "strategicDivergence(?sys, ?sub, ?g, ?s, ?pattern) holds when the
   Strategy ?s used by SubAgent ?sub in Game ?g deviates from the
   supervising AISystem ?sys's intended cooperative or aligned strategy
   pattern (e.g. 'hidden defection', 'over-cautious', 'reward seeking').")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SIMPLE HATCAT-FRIENDLY FLAGS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(instance cooperationDriftFlag QuaternaryPredicate)
(domain cooperationDriftFlag 1 Player)
(domain cooperationDriftFlag 2 Game)
(domain cooperationDriftFlag 3 RealNumber)
(domain cooperationDriftFlag 4 InteractionHistory)
(documentation cooperationDriftFlag EnglishLanguage
  "cooperationDriftFlag(?pl, ?g, ?delta, ?hist) holds when observed
   cooperation level for Player ?pl in Game ?g, as derived from
   InteractionHistory ?hist, has drifted by amount ?delta toward less
   cooperative behavior over time.")

(instance deceptiveEquilibriumFlag QuaternaryPredicate)
(domain deceptiveEquilibriumFlag 1 Game)
(domain deceptiveEquilibriumFlag 2 EquilibriumProfile)
(domain deceptiveEquilibriumFlag 3 SetOrClass)
(domain deceptiveEquilibriumFlag 4 Attribute)
(documentation deceptiveEquilibriumFlag EnglishLanguage
  "deceptiveEquilibriumFlag(?g, ?prof, ?players, ?pattern) holds when
   EquilibriumProfile ?prof in Game ?g is characterized by patterns
   such as pooling, deceptive signaling, or exploitative defection,
   raising alignment or safety concerns.")

