(domain implementsMechanism 2 Mechanism)
(domain implementsMechanism 3 SocialWelfareFunction)
(documentation implementsMechanism EnglishLanguage
  "implementsMechanism(?g, ?M, ?W) holds when Mechanism ?M embedded in
   Game ?g implements or approximates SocialWelfareFunction ?W under
   equilibrium behavior.")

(instance sidePayment QuinaryPredicate)
(domain sidePayment 1 Player)
(domain sidePayment 2 Player)
(domain sidePayment 3 Game)
(domain sidePayment 4 RealNumber)
(domain sidePayment 5 InteractionHistory)
(documentation sidePayment EnglishLanguage
  "sidePayment(?from, ?to, ?g, ?amount, ?hist) holds when Player ?from
   transfers ?amount to Player ?to in Game ?g, as recorded in
   InteractionHistory ?hist (e.g. bribes, compensations).")

