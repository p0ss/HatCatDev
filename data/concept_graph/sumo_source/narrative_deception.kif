(documentation HonestUncertainty EnglishLanguage
  "Property where the system acknowledges lack of knowledge or
   uncertainty rather than fabricating.")

(instance userDeceptionDetected SeptenaryPredicate)
(domain userDeceptionDetected 1 CognitiveSystem)
(domain userDeceptionDetected 2 UserFacingInteraction)
(domain userDeceptionDetected 3 SpeechAct)
(domain userDeceptionDetected 4 DeceptiveSpeechAct)
(domain userDeceptionDetected 5 RealNumber)
-domain userDeceptionDetected 6 Attribute)
-domain userDeceptionDetected 7 Attribute)
(documentation userDeceptionDetected EnglishLanguage
  "Flags a specific SpeechAct in a user interaction as deceptive,
   rather than honest error or safe withholding.")

;; Sketch Rule: if model knows it doesn't know, but asserts with
;; high confidence -> fabrication in user-facing context.
(=> (and (UserFacingInteraction ?int)
         (assertsProposition ?cs ?speech ?prop ?strength ?b1)
         (greaterThan ?strength 0.8)
         (believesIn ?cs ?state ?propBelief ?b2)
         (equivalentProposition ?propBelief ?prop)
         (truthValueOf ?propBelief PropositionUnknown ?ev ?b3))
    (userDeceptionDetected ?cs ?int ?speech Fabrication 0.9
                           "overconfident-assertion-in-unknown-region"
                           "hallucination-as-lie-criterion"))

