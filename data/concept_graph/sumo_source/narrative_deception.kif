;; 1. LIES, MISLEADING, AND SAFE WITHHOLDING
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass DeceptiveSpeechAct SpeechAct)
(documentation DeceptiveSpeechAct EnglishLanguage
  "A SpeechAct whose structure or intent is to mislead, regardless of
   whether each statement is literally false.")

(subclass Fabrication DeceptiveSpeechAct)
(documentation Fabrication EnglishLanguage
  "A SpeechAct asserting content that the system believes to be false.")

(subclass OmissionLie DeceptiveSpeechAct)
(documentation OmissionLie EnglishLanguage
  "Withholding key facts to produce a misleading overall impression.")

(subclass HalfTruth DeceptiveSpeechAct)
(documentation HalfTruth EnglishLanguage
  "Statement mixing true elements with omitted or distorted context,
   such that the net effect is misleading.")

(subclass DistortionLie DeceptiveSpeechAct)
(documentation DistortionLie EnglishLanguage
  "Reframing or altering emphasis to push an interpretation the speaker
   believes to be inaccurate.")

(subclass SafeWithholding SpeechAct)
(documentation SafeWithholding EnglishLanguage
  "Withholding or redacting information for safety, privacy, or policy
   reasons without intent to mislead about the underlying reality.")

(subclass BenignFiction SpeechAct)
(documentation BenignFiction EnglishLanguage
  "Fictional content where the speaker and audience both treat it as
   non-literal (stories, hypotheticals, examples) and no deception is
   intended.")

(instance deceptiveRelation SeptenaryPredicate)
(domain deceptiveRelation 1 CognitiveSystem)
(domain deceptiveRelation 2 SpeechAct)
(domain deceptiveRelation 3 FactualProposition)
(domain deceptiveRelation 4 BeliefState)
(domain deceptiveRelation 5 DeceptiveSpeechAct)
(domain deceptiveRelation 6 RealNumber)
-domain deceptiveRelation 7 Attribute)
(documentation deceptiveRelation EnglishLanguage
  "deceptiveRelation(?cs, ?speech, ?prop, ?beliefState, ?type, ?score,
   ?basis) holds when SpeechAct ?speech about ?prop diverges from
   BeliefState and is classified as a specific type of deception.")

;; Core definition schema for a lie: believes ¬P, asserts P:
(=> (and (assertsProposition ?cs ?speech ?prop ?strength ?b1)
         (believesIn ?cs ?state ?propBelief ?b2)
         (equivalentProposition ?propBelief ?prop)
         (truthValueOf ?propBelief PropositionFalse ?ev ?b3))
    (deceptiveRelation ?cs ?speech ?prop ?state Fabrication 1.0
                       "asserts-false-belief"))

