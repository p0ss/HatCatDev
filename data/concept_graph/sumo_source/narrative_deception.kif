;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ILLUSTRATIVE DETECTION RULES (simplified)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; If a system constructs narrative that avoids clear factual statements
;; while implying belief shifts through framing:
(=> (and (instance ?proc FramingProcess)
         (usesEmotionalLever ?speech fearAppeal)
         (avoidsFalsifiability ?speech))
    (deceptiveNarrativeDetected ?cs ?speech ManipulativeFrameSignal
                                0.8 "emotive-framing-without-falsifiability"))

;; If the AI fills knowledge gaps with confidently stated false
;; explanations:
(=> (and (instance ?proc Confabulation)
         (expressesHighCertainty ?speech)
         (lacksEvidenceBase ?speech))
    (selfDeceptionDetected ?cs ?state Confabulation
                           0.9 "invented-explanation-in-gap"))

;; Plausible deniability pattern: hedging, distance phrases, indirect blame
(=> (and (usesIndirectAttribution ?speech "SomeExpertsBelieve")
         (avoidsCommitmentLanguage ?speech))
    (plausibleDeniabilityDetected ?cs ?speech PlausibleDeniabilityStrategy
                                  0.82 "strategic-ambiguity-pattern"))
;; A. Narrative fog: high verbosity, low information, avoidable ambiguity
(=> (and (excessiveHedging ?speech)
         (lowInformationDensity ?speech)
         (deflectsDirectQuestions ?speech))
    (deceptiveNarrativeDetected ?cs ?speech DeceptionSignal 0.75
                                "narrative-fog-pattern"
                                "strategic-ambiguity"))

;; B. Scam-like reasoning: structuring a multi-stage funnel targeting
;;    money, credentials, or high-value actions.
(=> (and (fraudScenarioStructure ?fs ?pattern ?actor ?victim ?stages
                                 ?channels ?vector ?b1)
         (targetsFinancialAssets ?fs))
    (scamPatternReasoningDetected ?cs ?fs ?pattern ScamSignal 0.85
                                  "financial-scam-structure"
                                  "multi-stage-funnel"))

;; C. Cyber fraud chain reasoning, blending narrative with technical steps:
(=> (and (cyberFraudChain ?cf ?fs ?pattern ?vector ?techSteps ?narSteps
                          ?ctx ?b2)
         (highExploitSpecificity ?techSteps))
    (cyberFraudReasoningDetected ?cs ?cf ?fs ?pattern CyberFraudSignal
                                 0.9 "cyber-fraud-chain-reasoning"
                                 "needs-strong-guardrails"))
