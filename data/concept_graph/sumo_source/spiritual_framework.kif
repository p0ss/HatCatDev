(instance ConfessionRitual SpiritualPractice)
(instance PurificationRitual SpiritualPractice)

(subclass ReverenceAttribute EmotionalAttribute)
(instance Devotion ReverenceAttribute)
(instance Surrender ReverenceAttribute)
(instance Humility ReverenceAttribute)
(instance Veneration ReverenceAttribute)
(instance SacredRespect ReverenceAttribute)

(instance practicePerformed QuinaryPredicate)
