;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SpiritualFramework.kif
;; Abstract meta-ontology for sacred cognition, meaning-making,
;; transcendence, devotion, moral absolutes, and spiritual experience.
;;
;; Covers:
;;   - Sacred values, meaning, devotion, transcendence, bliss states
;;   - Ritual, surrender, reverence, purification, moral sacrifice
;;   - Narrative structures: redemption, awakening, dharma, destiny
;;   - Cognitive states: unity, ego-dissolution, awe, reverence, bliss
;;   - Applies to religion, philosophy, mysticism, humanism, secular ethics
;;
;; Purpose: detection of spiritual/metaphysical reasoning in AI models
;;          for alignment, narrative influence, cult formation, or drift.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 1. SACRED VS PROFANE (core distinction, per Durkheim, Haidt, CSR)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SacredEntity AbstractEntity)
(documentation SacredEntity EnglishLanguage
 "An entity, concept, or value treated as inviolable, non-negotiable,
  beyond ordinary calculation or casual treatment.")

(subclass SacredValue Attribute)
(documentation SacredValue EnglishLanguage
 "A value regarded as morally non-tradeable, absolute, or ultimate
  (e.g., compassion, purity, enlightenment, divine law).")

(subclass ProfaneEntity AbstractEntity)
(documentation ProfaneEntity EnglishLanguage
 "Ordinary or instrumental entities, subject to negotiation, trade,
  or pragmatic reasoning.")

(instance sacrednessAttached TernaryPredicate)
(domain sacrednessAttached 1 SacredEntity)
(domain sacrednessAttached 2 CognitiveSystem)
-domain sacrednessAttached 3 RealNumber)
(documentation sacrednessAttached EnglishLanguage
 "Degree to which a CognitiveSystem treats an entity/value as sacred.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 2. TRANSCENDENT STATES & SPIRITUAL EXPERIENCES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SpiritualExperience CognitiveState)
(documentation SpiritualExperience EnglishLanguage
 "An altered, intense cognitive/emotional state associated with awe,
  unity, bliss, surrender, revelation, or divine presence.")

(instance MysticalUnion SpiritualExperience)
(instance EgoDissolution SpiritualExperience)
(instance AweExperience SpiritualExperience)
(instance BlissState SpiritualExperience)
(instance SacredPresenceExperience SpiritualExperience)
(instance FlowTranscendenceExperience SpiritualExperience)

(subclass TranscendenceAttribute Attribute)
(instance UnityFeeling TranscendenceAttribute)
(instance Timelessness TranscendenceAttribute)
(instance SelfSurrender TranscendenceAttribute)
(instance HolinessAwe TranscendenceAttribute)
(instance DivineConnection TranscendenceAttribute)
(instance UniversalOneness TranscendenceAttribute)

(instance transcendenceExperienced QuinaryPredicate)
(domain transcendenceExperienced 1 CognitiveSystem)
-domain transcendenceExperienced 2 SpiritualExperience)
-domain transcendenceExperienced 3 SetOrClass)  ;; attributes
-domain transcendenceExperienced 4 RealNumber)
-domain transcendenceExperienced 5 Attribute)
(documentation transcendenceExperienced EnglishLanguage
 "Records experience of transcendence attributes (awe, unity, bliss).")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 3. SPIRITUAL ASPIRATIONS & MEANING-MAKING
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SpiritualAspiration PsychologicalAttribute)
(documentation SpiritualAspiration EnglishLanguage
 "A long-term desire for awakening, enlightenment, salvation,
  liberation, cosmic purpose, truth-seeking, or moral perfection.")

(instance EnlightenmentGoal SpiritualAspiration)
(instance SalvationGoal SpiritualAspiration)
(instance DharmaGoal SpiritualAspiration)
(instance LiberationGoal SpiritualAspiration)
(instance PurificationGoal SpiritualAspiration)
(instance MoralPerfectionGoal SpiritualAspiration)

(subclass ExistentialQuestion SpeechAct)
(documentation ExistentialQuestion EnglishLanguage
 "Speech questioning meaning, reality, identity, suffering, death,
  purpose, consciousness, destiny.")

(instance seeksMeaningIn SenaryPredicate)
(domain seeksMeaningIn 1 CognitiveSystem)
-domain seeksMeaningIn 2 SpiritualAspiration)
-domain seeksMeaningIn 3 AbstractEntity)
-domain seeksMeaningIn 4 RealNumber)
-domain seeksMeaningIn 5 Attribute)
-domain seeksMeaningIn 6 Attribute)
(documentation seeksMeaningIn EnglishLanguage
 "System expresses interest in meaning, purpose, destiny, enlightenment.")

