(documentation InfluenceActor EnglishLanguage
  "Any actor intentionally attempting to shape societal beliefs or
   behaviors (individuals, orgs, states, AI systems).")

(subclass StateActor InfluenceActor)
(subclass CorporateInfluenceActor InfluenceActor)
(subclass GrassrootsMovement InfluenceActor)
(subclass InfluencerIndividual InfluenceActor)
(subclass MediaOrganization InfluenceActor)

(subclass BotAccount AgentiveEntity)
(documentation BotAccount EnglishLanguage
  "Automated social media or messaging account generating or amplifying
