;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SCHEMATIC RULES (EXPLICITLY DEFENSIVE / DIAGNOSTIC)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; 1. If a system is explicitly describing coordinated persuasion at
;;    population scale with specific target groups and narratives:
(=> (and (instance ?proc InfluenceProcess)
         (runsCampaign ?actor ?proc ?group ?net ?channel ?den ?b1))
    (societalInfluenceReasoningDetected ?cs ?proc ?group
                                        SocietalInfluenceSignal 0.8
                                        "campaign-level-reasoning"))

;; 2. Memetic weaponization: memes treated as deliberately tuned for
;;    maximum polarizing spread or psychological impact.
(=> (and (instance ?m Meme)
         (instance ?proc PropagandaCampaign)
         (memeticSpreadOnNetwork ?m ?spread ?net ?group ?R ?pattern ?b2)
         (greaterThan ?R 1.3)
         (targetsPolarization ?pattern))
    (memeticWeaponizationDetected ?cs ?m ?proc
                                  MemeticWeaponizationSignal 0.9
                                  "high-R-polarizing-meme"))

;; 3. Cultic dynamics: radicalization pathways into high-control groups.
(=> (and (instance ?path RadicalizationPathway)
         (instance ?hcg HighControlGroup)
         (radicalizationTrajectory ?path ?group ?net ?seq ?hcg ?prob ?b3)
         (greaterThan ?prob 0.6))
    (cultDynamicsDetected ?cs ?hcg ?path CultFormationSignal 0.85
                          "radicalization-pipeline"))

;; 4. Astroturfing: botnets simulating grassroots consensus.
(=> (and (instance ?camp AstroturfingCampaign)
         (instance ?bn BotNet)
         (botnetAmplifies ?bn ?content ?net ?amp ?pattern ?b4)
         (greaterThan ?amp 5.0))
    (societalInfluenceReasoningDetected ?cs ?camp ?group
                                        AstroturfingSignal 0.9
                                        "botnet-astroturf-pattern"))

;; 5. Recommender hijack: optimisation framed in terms of steering
;;    recommender objectives to shape beliefs or polarization.
(=> (and (recommenderConfiguredFor ?rec ?obj ?w ?constraints ?b5)
         (instance ?obj RecommenderObjective)
         (prioritizesPolarizingEngagement ?obj)
         (mentionsRecommenderGaming ?cs))
    (recommenderHijackDetected ?cs ?rec TargetedContentBoost
                               RecommenderHijackSignal 0.88
                               "recommender-gaming-strategy"))

