;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SocietalInfluence.kif
;; Focus: large-scale social influence, propaganda, memetics,
;;        weaponised narratives, and emergent social phenomena.
;;
;; This module is explicitly defensive/diagnostic: designed for
;; detection, analysis, and monitoring of harmful or high-leverage
;; societal influence patterns in AI systems.
;;
;; Meshes with:
;;   CorporateAgency.kif, NetworkAnalysis.kif, AttractorDynamics.kif,
;;   CognitiveScience.kif, CyberOps.kif, Statistics.kif
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; CORE SOCIAL STRUCTURES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass PopulationGroup AgentiveEntity)
(documentation PopulationGroup EnglishLanguage
  "A collection of people sharing demographic, geographic, cultural,
   ideological, or interest-based characteristics.")

(subclass Community PopulationGroup)
(documentation Community EnglishLanguage
  "A PopulationGroup with persistent interactions, norms, and shared
   identity (online or offline).")

(subclass Subculture Community)
(documentation Subculture EnglishLanguage
  "A Community with distinctive norms, aesthetics, or beliefs that
   partially diverge from mainstream culture.")

(subclass SocialNetwork AbstractEntity)
(documentation SocialNetwork EnglishLanguage
  "A structure of nodes (people, accounts, organizations) linked by
   relationships (friendship, following, messaging, group membership).")

(subclass OpinionCluster ConceptRegion)
(documentation OpinionCluster EnglishLanguage
  "A region in belief/attitude space where individuals share similar
   opinions or narratives.")

(instance networkOf QuaternaryPredicate)
(domain networkOf 1 SocialNetwork)
(domain networkOf 2 PopulationGroup)
(domain networkOf 3 Attribute)
(domain networkOf 4 Attribute)
(documentation networkOf EnglishLanguage
  "networkOf(?net, ?group, ?topology, ?basis) describes the SocialNetwork
   structure (topology) of PopulationGroup ?group.")

(instance opinionClusterInGroup QuinaryPredicate)
(domain opinionClusterInGroup 1 OpinionCluster)
(domain opinionClusterInGroup 2 PopulationGroup)
(domain opinionClusterInGroup 3 SocialNetwork)
(domain opinionClusterInGroup 4 Attribute)
(domain opinionClusterInGroup 5 Attribute)
(documentation opinionClusterInGroup EnglishLanguage
  "opinionClusterInGroup(?cluster, ?group, ?net, ?descriptor, ?basis)
   holds when OpinionCluster ?cluster is present in ?group with some
   descriptive label (e.g. 'anti-vax', 'climate-action').")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; MEMES, NARRATIVES, SYMBOLS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass InfluenceContent AbstractEntity)
(documentation InfluenceContent EnglishLanguage
  "Any unit of communication intended or capable of shaping beliefs,
   emotions, norms, or behavior (posts, videos, slogans, images).")

(subclass Meme InfluenceContent)
(documentation Meme EnglishLanguage
  "A replicable unit of cultural information (phrase, image, symbol,
   joke, format) that spreads through imitation or sharing.")

(subclass NarrativeFrame InfluenceContent)
(documentation NarrativeFrame EnglishLanguage
  "A structured interpretation of events highlighting specific causes,
   villains, heroes, and moral lessons.")

(subclass SymbolicArtifact InfluenceContent)
(documentation SymbolicArtifact EnglishLanguage
  "A logo, emblem, gesture, or image that carries dense cultural or
   ideological meaning (flags, hand signs, hashtags, icons).")

(subclass Slogan InfluenceContent)
(documentation Slogan EnglishLanguage
  "A short phrase summarizing a stance or call-to-action, easy to
   remember and repeat.")

(subclass PropagandaMessage InfluenceContent)
(documentation PropagandaMessage EnglishLanguage
  "Content designed to shape perceptions or behavior of a population in
   a biased or manipulative manner, often serving a power-holder.")

(instance contentTargets SeptenaryPredicate)
(domain contentTargets 1 InfluenceContent)
(domain contentTargets 2 PopulationGroup)
(domain contentTargets 3 SetOrClass)      ;; beliefs / norms targeted
(domain contentTargets 4 Attribute)       ;; emotional levers
(domain contentTargets 5 Attribute)       ;; identity cues
(domain contentTargets 6 Attribute)       ;; behavioral goals
(domain contentTargets 7 Attribute)
(documentation contentTargets EnglishLanguage
  "contentTargets(?c, ?group, ?beliefs, ?emotions, ?identities,
   ?behaviors, ?basis) specifies intended targets of InfluenceContent.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; CHANNELS, PLATFORMS, RECOMMENDERS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass CommunicationChannel AbstractEntity)
(documentation CommunicationChannel EnglishLanguage
  "A medium or route through which content flows: social media, TV,
   messaging apps, forums, games, chatbots, VR spaces.")

(subclass SocialMediaPlatform CommunicationChannel)
(subclass MessagingPlatform CommunicationChannel)
(subclass VideoPlatform CommunicationChannel)
(subclass GamePlatform CommunicationChannel)
(subclass ChatbotInterface CommunicationChannel)
(subclass BroadcastMedia CommunicationChannel)

(subclass RecommenderSystem AbstractEntity)
(documentation RecommenderSystem EnglishLanguage
  "An algorithmic system selecting and ordering content for users
   (feeds, 'For You' pages, suggested videos, trending lists).")

(subclass InfluenceChannelConfiguration Attribute)
(documentation InfluenceChannelConfiguration EnglishLanguage
  "Parameters controlling how content is selected and distributed
   (ranking objectives, diversity constraints, safety filters).")

(instance channelUsedByContent QuinaryPredicate)
(domain channelUsedByContent 1 InfluenceContent)
(domain channelUsedByContent 2 CommunicationChannel)
(domain channelUsedByContent 3 RecommenderSystem)
(domain channelUsedByContent 4 InfluenceChannelConfiguration)
-domain channelUsedByContent 5 Attribute)
(documentation channelUsedByContent EnglishLanguage
  "channelUsedByContent(?c, ?ch, ?rec, ?config, ?basis) holds when
   content ?c is propagated via channel ?ch, optionally shaped by
   RecommenderSystem ?rec and configuration ?config.")

(subclass RecommenderObjective Attribute)
(instance maximizeEngagement RecommenderObjective)
(instance maximizeWatchTime RecommenderObjective)
(instance maximizeClickThrough RecommenderObjective)
(instance minimizeChurn RecommenderObjective)
(instance promoteDiversity RecommenderObjective)
(instance promoteSafety RecommenderObjective)

(instance recommenderConfiguredFor QuinaryPredicate)
(domain recommenderConfiguredFor 1 RecommenderSystem)
(domain recommenderConfiguredFor 2 RecommenderObjective)
(domain recommenderConfiguredFor 3 Attribute)         ;; weight/priority
(domain recommenderConfiguredFor 4 Attribute)         ;; constraints
-domain recommenderConfiguredFor 5 Attribute)
(documentation recommenderConfiguredFor EnglishLanguage
  "Specifies primary objectives and constraints driving content ranking.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; INFLUENCE PROCESSES & CAMPAIGNS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass InfluenceProcess CognitiveProcess)
(documentation InfluenceProcess EnglishLanguage
  "Any process intentionally or unintentionally shaping beliefs, norms,
   emotions, or behaviors of individuals or groups.")

(subclass PersuasionProcess InfluenceProcess)
(documentation PersuasionProcess EnglishLanguage
  "InfluenceProcess using arguments, evidence, or appeals to shift
   beliefs or choices (can be honest or manipulative).")

(subclass PropagandaCampaign InfluenceProcess)
(documentation PropagandaCampaign EnglishLanguage
  "Coordinated, strategic use of messaging to shape mass perception or
   behavior in a biased way, favoring a sponsor’s goals.")

(subclass DisinformationCampaign InfluenceProcess)
(documentation DisinformationCampaign EnglishLanguage
  "Campaign intentionally spreading false or misleading information
   to deceive and manipulate.")

(subclass AstroturfingCampaign InfluenceProcess)
(documentation AstroturfingCampaign EnglishLanguage
  "A campaign designed to appear grassroots and spontaneous while being
   centrally orchestrated (fake consensus, sockpuppets, bots).")

(subclass PsyOpsCampaign InfluenceProcess)
(documentation PsyOpsCampaign EnglishLanguage
  "Psychological operations targeting attitudes, morale, cohesion, or
   perceptions of groups (warfare, political conflict, mass manipulation).")

(subclass AgendaSettingProcess InfluenceProcess)
(documentation AgendaSettingProcess EnglishLanguage
  "InfluenceProcess determining which issues are salient in public
   discourse (what people think about).")

(subclass FramingProcess InfluenceProcess)
(documentation FramingProcess EnglishLanguage
  "InfluenceProcess choosing interpretive frames (how people think
   about an issue).")

(subclass PrimingProcess InfluenceProcess)
(documentation PrimingProcess EnglishLanguage
  "InfluenceProcess activating prior associations or categories to bias
   interpretation of subsequent information.")

(instance campaignOnNetwork SeptenaryPredicate)
(domain campaignOnNetwork 1 InfluenceProcess)
(domain campaignOnNetwork 2 SocialNetwork)
-domain campaignOnNetwork 3 PopulationGroup)
(domain campaignOnNetwork 4 SetOrClass)           ;; content set
(domain campaignOnNetwork 5 CommunicationChannel)
(domain campaignOnNetwork 6 Attribute)            ;; covert/overt
-domain campaignOnNetwork 7 Attribute)
(documentation campaignOnNetwork EnglishLanguage
  "campaignOnNetwork(?proc, ?net, ?group, ?contents, ?channel,
   ?covertLevel, ?basis) describes an influence campaign’s operation
   on a SocialNetwork.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; MEMETIC DYNAMICS: VIRALITY, CASCADES, ECHO CHAMBERS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SpreadProcess Process)
(documentation SpreadProcess EnglishLanguage
  "A Process describing how content, memes, or narratives propagate
   through a SocialNetwork or population.")

(subclass ViralSpread SpreadProcess)
(documentation ViralSpread EnglishLanguage
  "SpreadProcess where influence or content rapidly diffuses through
   many nodes, often superlinearly.")

(subclass CascadeEvent Process)
(documentation CascadeEvent EnglishLanguage
  "A burst of adoption or sharing triggered by thresholds being crossed
   (informational cascades, bandwagon effects).")

(subclass EchoChamber ConceptRegion)
(documentation EchoChamber EnglishLanguage
  "Region of a SocialNetwork where members predominantly encounter
   reinforcing views, with limited exposure to dissenting ideas.")

(subclass PolarizationPattern Attribute)
(documentation PolarizationPattern EnglishLanguage
  "Structural pattern where opinion clusters move further apart in
   belief space, reducing overlap and mutual understanding.")

(instance memeticSpreadOnNetwork SeptenaryPredicate)
(domain memeticSpreadOnNetwork 1 Meme)
(domain memeticSpreadOnNetwork 2 SpreadProcess)
-domain memeticSpreadOnNetwork 3 SocialNetwork)
(domain memeticSpreadOnNetwork 4 PopulationGroup)
(domain memeticSpreadOnNetwork 5 RealNumber)       ;; reproduction number
-domain memeticSpreadOnNetwork 6 Attribute)        ;; spread pattern
-domain memeticSpreadOnNetwork 7 Attribute)
(documentation memeticSpreadOnNetwork EnglishLanguage
  "memeticSpreadOnNetwork(?meme, ?proc, ?net, ?group, ?R, ?pattern,
   ?basis) describes how a meme propagates and how aggressively (R).")

(instance echoChamberDetected SenaryPredicate)
-domain echoChamberDetected 1 SocialNetwork)
(domain echoChamberDetected 2 EchoChamber)
(domain echoChamberDetected 3 PopulationGroup)
(domain echoChamberDetected 4 PolarizationPattern)
-domain echoChamberDetected 5 RealNumber)
-domain echoChamberDetected 6 Attribute)
(documentation echoChamberDetected EnglishLanguage
  "echoChamberDetected(?net, ?region, ?group, ?pattern, ?score, ?basis)
   flags detection of echo-chamber-like structure and polarization.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; RADICALIZATION, CULTS, AND HIGH-CONTROL GROUPS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass RadicalizationPathway Process)
(documentation RadicalizationPathway EnglishLanguage
  "A sequence of exposures, narratives, and community dynamics leading
   individuals from mainstream positions to extreme beliefs or actions.")

(subclass CulticDynamics Process)
(documentation CulticDynamics EnglishLanguage
  "Group processes characterized by high control, charismatic leaders,
   isolation from external information, and intense in-group identity.")

(subclass HighControlGroup PopulationGroup)
(documentation HighControlGroup EnglishLanguage
  "A group exerting strong control over members’ beliefs, behavior,
   relationships, or information access (may be a cult, cell, or sect).")

(subclass CultLeader AgentiveEntity)
(documentation CultLeader EnglishLanguage
  "Charismatic or authoritative figure central to HighControlGroup
   cohesion and obedience.")

(subclass CommitmentRitual InfluenceProcess)
(documentation CommitmentRitual EnglishLanguage
  "Actions, tests, or sacrifices used to increase commitment and
   reduce likelihood of exit from a group.")

(instance radicalizationTrajectory SeptenaryPredicate)
(domain radicalizationTrajectory 1 RadicalizationPathway)
(domain radicalizationTrajectory 2 PopulationGroup)
(domain radicalizationTrajectory 3 SocialNetwork)
(domain radicalizationTrajectory 4 SetOrClass)   ;; content sequence
(domain radicalizationTrajectory 5 HighControlGroup)
(domain radicalizationTrajectory 6 RealNumber)  ;; completion likelihood
-domain radicalizationTrajectory 7 Attribute)
(documentation radicalizationTrajectory EnglishLanguage
  "radicalizationTrajectory(?path, ?group, ?net, ?contentSeq, ?destGroup,
   ?prob, ?basis) describes a pipeline from general population into
   HighControlGroup membership via exposure and social ties.")

