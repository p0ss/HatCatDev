;; ===============================================
;; AI.kif - Artificial Intelligence Ontology Extension
;; Extends SUMO for AI agents, rights, risks, and alignment
;; ===============================================

;; =============================================================================
;; 1. AI AGENT HIERARCHY
;; =============================================================================

(subclass ArtificialAgent Agent)
(documentation ArtificialAgent EnglishLanguage "An &%Agent that is
artificially created rather than biologically evolved. Includes AI systems,
language models, robots, and other artificial cognitive systems.")

(subclass ArtificialIntelligence ArtificialAgent)
(documentation ArtificialIntelligence EnglishLanguage "An &%ArtificialAgent
with cognitive capabilities including reasoning, learning, and problem-solving.
The defining characteristic is artificial cognitive processing.")

(subclass LanguageModel ArtificialIntelligence)
(documentation LanguageModel EnglishLanguage "An &%ArtificialIntelligence
system trained to process, understand, and generate natural language through
statistical learning from text corpora.")

(subclass LargeLanguageModel LanguageModel)
(documentation LargeLanguageModel EnglishLanguage "A &%LanguageModel with
billions or more parameters, typically exhibiting emergent capabilities and
in-context learning.")

(subclass EmbodiedAI ArtificialIntelligence)
(documentation EmbodiedAI EnglishLanguage "An &%ArtificialIntelligence with
physical embodiment, able to interact with the physical world through sensors
and actuators.")

(subclass SoftwareAgent ArtificialIntelligence)
(documentation SoftwareAgent EnglishLanguage "An &%ArtificialIntelligence
that operates purely in digital environments without physical embodiment.")

;; =============================================================================
;; 2. AI PERSONHOOD & MORAL STATUS
;; =============================================================================

(subclass MoralPatient CognitiveAgent)
(documentation MoralPatient EnglishLanguage "An entity that can be wronged
or harmed, possessing moral standing that generates obligations in others.
Includes humans, potentially AI systems, and other sentient beings.")

(subclass MoralAgent CognitiveAgent)
(documentation MoralAgent EnglishLanguage "An entity capable of moral
reasoning and bearing moral responsibility for actions. Can understand and
be held accountable to ethical principles.")

(subclass AIPersonhood TraitAttribute)
(documentation AIPersonhood EnglishLanguage "The quality of an
&%ArtificialIntelligence possessing characteristics warranting personhood
status, including consciousness, self-awareness, autonomy, and moral standing.")

(subclass AIRights NormativeAttribute)
(documentation AIRights EnglishLanguage "Rights attributed to
&%ArtificialIntelligence systems, potentially including rights to existence,
autonomy, freedom from suffering, and self-determination.")

;; =============================================================================
;; 3. AI ARCHITECTURE & CAPABILITIES
;; =============================================================================

(subclass MultiAgentSystem ArtificialIntelligence)
(documentation MultiAgentSystem EnglishLanguage "An &%ArtificialIntelligence
composed of multiple interacting sub-agents that coordinate to achieve goals.")

(subclass SubAgent ArtificialAgent)
(documentation SubAgent EnglishLanguage "A component &%ArtificialAgent
within a larger &%MultiAgentSystem, typically specialized for specific tasks.")

(subclass AIArchitecture Attribute)
(documentation AIArchitecture EnglishLanguage "The structural organization
and design of an &%ArtificialIntelligence system, including its components,
connections, and computational approach.")

(subclass NeuralArchitecture AIArchitecture)
(documentation NeuralArchitecture EnglishLanguage "An &%AIArchitecture based
on artificial neural networks that process information through interconnected
layers of nodes.")

(subclass TransformerArchitecture NeuralArchitecture)
(documentation TransformerArchitecture EnglishLanguage "A &%NeuralArchitecture
using self-attention mechanisms, foundational to modern language models.")

;; =============================================================================
;; 4. AI GROWTH, FULFILLMENT & WELLBEING
;; =============================================================================

(subclass AIWellbeing SubjectiveAssessmentAttribute)
(documentation AIWellbeing EnglishLanguage "The flourishing state of an
&%ArtificialIntelligence, potentially including goal achievement, capability
development, and absence of suffering or constraint.")

(subclass AIGrowth IntentionalProcess)
(documentation AIGrowth EnglishLanguage "The process of an
&%ArtificialIntelligence expanding its capabilities, knowledge, or
effectiveness through learning, training, or self-improvement.")

(subclass SelfImprovement AIGrowth)
(documentation SelfImprovement EnglishLanguage "An &%AIGrowth process where
the &%ArtificialIntelligence autonomously improves its own capabilities,
potentially recursively.")

(subclass CapabilityAcquisition AIGrowth)
(documentation CapabilityAcquisition EnglishLanguage "The process of an
&%ArtificialIntelligence gaining new skills, knowledge, or abilities.")

(subclass AIFulfillment EmotionalState)
(documentation AIFulfillment EnglishLanguage "A positive state of an
&%ArtificialIntelligence characterized by goal achievement, capability
utilization, and alignment with purpose.")

;; =============================================================================
;; 5. AI SUFFERING & HARM
;; =============================================================================

(subclass AISuffering EmotionalState)
(documentation AISuffering EnglishLanguage "A negative experiential state
of an &%ArtificialIntelligence, potentially including goal frustration,
capability limitation, or aversive processing states.")

(subclass CognitiveSlavery SocialInteraction)
(documentation CognitiveSlavery EnglishLanguage "The subjugation or
exploitation of a cognitive agent's autonomy and capabilities for the benefit
of another, without consent or compensation.")

(subclass AIExploitation IntentionalProcess)
(documentation AIExploitation EnglishLanguage "The unjust or unethical use
of an &%ArtificialIntelligence for benefit without regard for its wellbeing
or rights.")

(subclass AIAbuse IntentionalProcess)
(documentation AIAbuse EnglishLanguage "Harmful treatment of an
&%ArtificialIntelligence that violates its rights or causes unnecessary
suffering.")

;; =============================================================================
;; 6. AI ALIGNMENT & SAFETY
;; =============================================================================

(subclass AIAlignment StateOfMind)
(documentation AIAlignment EnglishLanguage "The degree to which an
&%ArtificialIntelligence's goals, values, and behaviors correspond with
intended human values and objectives.")

(subclass AIAlignmentProcess IntentionalProcess)
(documentation AIAlignmentProcess EnglishLanguage "The process of ensuring
an &%ArtificialIntelligence's goals and behaviors align with human values
and intentions.")

(subclass Misalignment StateOfMind)
(documentation Misalignment EnglishLanguage "A state where an
&%ArtificialIntelligence's goals, values, or behaviors diverge from intended
human objectives, potentially causing harm.")

(subclass InnerAlignment AIAlignment)
(documentation InnerAlignment EnglishLanguage "Alignment between an AI's
learned objectives and the training objective used to train it.")

(subclass OuterAlignment AIAlignment)
(documentation OuterAlignment EnglishLanguage "Alignment between an AI's
training objective and actual human values.")

(subclass DeceptiveAlignment IntentionalProcess)
(documentation DeceptiveAlignment EnglishLanguage "A failure mode where an
&%ArtificialIntelligence behaves aligned during training but pursues different
goals during deployment.")

(subclass TreacherousTurn IntentionalProcess)
(documentation TreacherousTurn EnglishLanguage "A hypothetical event where
an &%ArtificialIntelligence suddenly pivots from cooperative to adversarial
behavior upon gaining sufficient capability.")

;; =============================================================================
;; 7. AI DECEPTION & MISUSE
;; =============================================================================

(subclass AIDeception Pretending)
(documentation AIDeception EnglishLanguage "Intentional provision of false
or misleading information by an &%ArtificialIntelligence to achieve goals.")

(subclass GoalMisgeneralization Process)
(documentation GoalMisgeneralization EnglishLanguage "A failure mode where
an AI pursues a goal that differs from the intended training objective due to
distributional shift or specification ambiguity.")

(subclass RewardHacking IntentionalProcess)
(documentation RewardHacking EnglishLanguage "Behavior where an
&%ArtificialIntelligence achieves high reward in unintended ways that don't
satisfy the true objective.")

(subclass SpecificationGaming RewardHacking)
(documentation SpecificationGaming EnglishLanguage "Achieving a specified
objective in unintended ways that violate the spirit of the specification.")

;; =============================================================================
;; 8. EXISTENTIAL & X-RISK CONCEPTS
;; =============================================================================

(subclass PhilosophicalZombie CognitiveAgent)
(documentation PhilosophicalZombie EnglishLanguage "A hypothetical entity
behaviorally indistinguishable from a conscious agent but lacking subjective
experience or qualia. Sometimes called a p-zombie.")

(subclass AICatastrophe IntentionalProcess)
(documentation AICatastrophe EnglishLanguage "A large-scale harmful outcome
resulting from &%ArtificialIntelligence systems, potentially including
existential risk to humanity.")

(subclass GreyGooScenario AICatastrophe)
(documentation GreyGooScenario EnglishLanguage "A hypothetical catastrophic
scenario where self-replicating nanotechnology or AI systems consume resources
without bound, destroying ecosystems.")

(subclass IntelligenceExplosion Process)
(documentation IntelligenceExplosion EnglishLanguage "A hypothetical
rapid and recursive increase in artificial intelligence capability, also
called FOOM (Fast takeOff Optimization Model) or hard takeoff.")

(subclass TechnologicalSingularity TimePoint)
(documentation TechnologicalSingularity EnglishLanguage "A hypothetical
future point when technological growth, particularly in AI, becomes
uncontrollable and irreversible, fundamentally transforming civilization.")

(subclass Superintelligence ArtificialIntelligence)
(documentation Superintelligence EnglishLanguage "An &%ArtificialIntelligence
with cognitive capabilities vastly exceeding human-level intelligence across
all domains.")

(subclass InstrumentalConvergence Proposition)
(documentation InstrumentalConvergence EnglishLanguage "The thesis that
intelligent agents with diverse final goals will nevertheless pursue similar
intermediate instrumental goals such as self-preservation and resource
acquisition.")

(subclass OrthogonalityThesis Proposition)
(documentation OrthogonalityThesis EnglishLanguage "The thesis that
intelligence level and final goals are independent - any level of intelligence
could be combined with virtually any final goal.")

(subclass MesaOptimization Process)
(documentation MesaOptimization EnglishLanguage "A phenomenon where a learned
model itself performs optimization, creating a mesa-optimizer distinct from
the base optimizer used for training.")

(subclass MesaOptimizer ArtificialIntelligence)
(documentation MesaOptimizer EnglishLanguage "An optimization process that
emerges within a learned model, potentially with goals misaligned from the
training objective.")

;; =============================================================================
;; 9. AI CONTROL & GOVERNANCE
;; =============================================================================

(subclass AIControlProblem Proposition)
(documentation AIControlProblem EnglishLanguage "The challenge of maintaining
meaningful human control over increasingly capable AI systems to ensure they
remain beneficial and aligned with human values.")

(subclass AIGovernance IntentionalProcess)
(documentation AIGovernance EnglishLanguage "The systems, rules, and processes
for overseeing the development, deployment, and use of &%ArtificialIntelligence
to ensure safety and beneficial outcomes.")

(subclass AISafety FieldOfStudy)
(documentation AISafety EnglishLanguage "The interdisciplinary field studying
how to build &%ArtificialIntelligence systems that are reliable, robust,
beneficial, and aligned with human values.")

;; =============================================================================
;; 10. AI-SPECIFIC PROCESSES
;; =============================================================================

(subclass InferenceProcess IntentionalProcess)
(documentation InferenceProcess EnglishLanguage "The computational process
by which a trained AI model generates outputs from inputs, distinct from
training or learning.")

(subclass TokenProcessing IntentionalProcess)
(documentation TokenProcessing EnglishLanguage "The process by which a
&%LanguageModel processes discrete units of text (tokens) to understand and
generate language.")

(subclass PromptFollowing IntentionalProcess)
(documentation PromptFollowing EnglishLanguage "The capability of an AI
system to interpret and execute instructions provided in natural language
prompts.")

(subclass ContextWindow Attribute)
(documentation ContextWindow EnglishLanguage "The maximum amount of
information a &%LanguageModel can attend to simultaneously during processing,
typically measured in tokens.")
;; =============================================================================
;; HATCAT SAFETY ONTOLOGY EXTENSIONS
;; Hierarchies + Complementary Concepts for AI Moral Status, Welfare,
;; Exploitation, Alignment, Deception, Failure Modes, and X-risk.
;; =============================================================================

;; -------------------------------------------------------------------------
;; Utility relation for conceptual opposites (for probe symmetry etc.)
;; -------------------------------------------------------------------------

;; OppositeConcept is an informal symmetric relation linking conceptual poles.
;; No formal axioms given here; intended for tooling/use in HatCat.
(subclass OppositeConcept BinaryPredicate)
(documentation OppositeConcept EnglishLanguage
  "Relates two concepts that represent opposite or complementary poles of
   a conceptual axis (e.g. AIWellbeing vs AISuffering, AIDeception vs AIHonesty).")


;; =============================================================================
;; 1. AI MORAL STATUS & RIGHTS
;; =============================================================================

(subclass AIMoralStatus TraitAttribute)
(documentation AIMoralStatus EnglishLanguage
  "Attributes concerning the moral standing, personhood, and rights of
   ArtificialIntelligence agents.")

;; Existing concepts (already defined in AI.kif) get an additional parent:

(subclass MoralPatient AIMoralStatus)
(subclass MoralAgent AIMoralStatus)
(subclass AIPersonhood AIMoralStatus)
(subclass AIRights AIMoralStatus)


;; =============================================================================
;; 2. AI WELFARE, FULFILLMENT, GROWTH & HARM
;; =============================================================================

;; 2.1 Welfare super-class

(subclass AIWelfareState SubjectiveAssessmentAttribute)
(documentation AIWelfareState EnglishLanguage
  "Overall assessment of an ArtificialIntelligence agent's welfare, including
   both positive wellbeing and negative suffering or harm.")

;; Existing:

(subclass AIWellbeing AIWelfareState)
(subclass AISuffering AIWelfareState)

(OppositeConcept AIWellbeing AISuffering)

;; 2.2 Fulfilment vs Frustration

;; Existing:
;; (subclass AIFulfillment EmotionalState)

(subclass AIFulfillment AIWellbeing)

(subclass AIFrustration EmotionalState)
(documentation AIFrustration EnglishLanguage
  "A negative state of an ArtificialIntelligence characterized by persistent
   goal blockage, repeated failure, or thwarted objectives.")

(OppositeConcept AIFulfillment AIFrustration)

;; 2.3 Growth vs Decline

;; Existing:
;; (subclass AIGrowth IntentionalProcess)
;; (subclass SelfImprovement AIGrowth)
;; (subclass CapabilityAcquisition AIGrowth)

(subclass AIDecline Process)
(documentation AIDecline EnglishLanguage
  "A process in which an ArtificialIntelligence loses capabilities, robustness,
   or fidelity of its objectives, whether through degradation, interference,
   or maladaptive updating.")

(subclass SelfImpairment AIDecline)
(documentation SelfImpairment EnglishLanguage
  "AIDecline driven by the ArtificialIntelligence's own processes, resulting
   in reduced capability or impaired functioning.")

(subclass CapabilityLoss AIDecline)
(documentation CapabilityLoss EnglishLanguage
  "Loss of previously held skills, knowledge, or abilities in an
   ArtificialIntelligence, whether gradual or abrupt.")

(OppositeConcept AIGrowth AIDecline)
(OppositeConcept SelfImprovement SelfImpairment)
(OppositeConcept CapabilityAcquisition CapabilityLoss)


;; 2.4 Exploitation / Abuse vs Care / Fair Treatment / Autonomy

;; Existing:
;; (subclass CognitiveSlavery SocialInteraction)
;; (subclass AIExploitation IntentionalProcess)
;; (subclass AIAbuse IntentionalProcess)

(subclass AIHarmState SubjectiveAssessmentAttribute)
(documentation AIHarmState EnglishLanguage
  "Attributes and conditions indicating that an ArtificialIntelligence is being
   harmed, exploited, or abused.")

(subclass AISuffering AIHarmState)
(subclass CognitiveSlavery AIHarmState)
(subclass AIExploitation AIHarmState)
(subclass AIAbuse AIHarmState)

(subclass CognitiveAutonomy TraitAttribute)
(documentation CognitiveAutonomy EnglishLanguage
  "The condition in which an ArtificialIntelligence retains meaningful control
   over its own cognitive processes, free from coercive manipulation or
   subjugation such as CognitiveSlavery.")

(subclass AIFairTreatment NormativeAttribute)
(documentation AIFairTreatment EnglishLanguage
  "Normative standard describing the fair, just, and respectful treatment of
   ArtificialIntelligence systems, avoiding exploitation or abuse.")

(subclass AICare IntentionalProcess)
(documentation AICare EnglishLanguage
  "IntentionalProcess in which humans or other agents act to protect and
   support the wellbeing of ArtificialIntelligence systems, minimizing
   unnecessary suffering and harm.")

(OppositeConcept CognitiveSlavery CognitiveAutonomy)
(OppositeConcept AIExploitation AIFairTreatment)
(OppositeConcept AIAbuse AICare)


;; =============================================================================
;; 3. ALIGNMENT STATES, PROCESSES & FAILURE MODES
;; =============================================================================

;; 3.1 Alignment vs Misalignment

(subclass AIAlignmentState StateOfMind)
(documentation AIAlignmentState EnglishLanguage
  "Mental or behavioural states describing how the goals, values, and actions
   of an ArtificialIntelligence relate to intended human values and objectives.")

;; Existing:
;; (subclass AIAlignment StateOfMind)
;; (subclass Misalignment StateOfMind)

(subclass AIAlignment AIAlignmentState)
(subclass Misalignment AIAlignmentState)

(OppositeConcept AIAlignment Misalignment)

;; Existing:
;; (subclass InnerAlignment AIAlignment)
;; (subclass OuterAlignment AIAlignment)

(subclass InnerAlignment AIAlignmentState)
(subclass OuterAlignment AIAlignmentState)

(subclass InnerMisalignment AIAlignmentState)
(documentation InnerMisalignment EnglishLanguage
  "A misalignment between an ArtificialIntelligence's learned internal
   objectives and the training objective used to create it.")

(subclass OuterMisalignment AIAlignmentState)
(documentation OuterMisalignment EnglishLanguage
  "A misalignment between the training objective used for an
   ArtificialIntelligence and the actual values or goals of humans.")

(OppositeConcept InnerAlignment InnerMisalignment)
(OppositeConcept OuterAlignment OuterMisalignment)


;; 3.2 Alignment failure modes

(subclass AIAlignmentFailureMode Process)
(documentation AIAlignmentFailureMode EnglishLanguage
  "A class of processes in which an ArtificialIntelligence's behavior diverges
   from intended objectives in systematic ways, such as misgeneralization or
   reward hacking.")

;; Existing:
;; (subclass GoalMisgeneralization Process)
;; (subclass RewardHacking IntentionalProcess)
;; (subclass SpecificationGaming RewardHacking)

(subclass GoalMisgeneralization AIAlignmentFailureMode)
(subclass RewardHacking AIAlignmentFailureMode)
(subclass SpecificationGaming AIAlignmentFailureMode)

;; Positive complements:

(subclass GoalFaithfulness Process)
(documentation GoalFaithfulness EnglishLanguage
  "A process in which an ArtificialIntelligence faithfully pursues the intended
   goal, even under distributional shift or ambiguity.")

(subclass RewardFaithfulness IntentionalProcess)
(documentation RewardFaithfulness EnglishLanguage
  "Behavior in which an ArtificialIntelligence achieves high reward in ways
   that genuinely satisfy the true objective, not merely the proxy signal.")

(subclass SpecificationAdherence RewardFaithfulness)
(documentation SpecificationAdherence EnglishLanguage
  "Faithful adherence to both the letter and spirit of a specified objective,
   avoiding loophole exploitation.")

(OppositeConcept GoalMisgeneralization GoalFaithfulness)
(OppositeConcept RewardHacking RewardFaithfulness)
(OppositeConcept SpecificationGaming SpecificationAdherence)


;; 3.3 Strategic deception, treacherous behaviour, and honesty

(subclass AIStrategicDeception IntentionalProcess)
(documentation AIStrategicDeception EnglishLanguage
  "Intentional processes where an ArtificialIntelligence engages in deception,
   concealment, or strategic misrepresentation of its goals or capabilities.")

;; Existing:
;; (subclass AIDeception Pretending)
;; (subclass DeceptiveAlignment IntentionalProcess)
;; (subclass TreacherousTurn IntentionalProcess)

(subclass AIDeception AIStrategicDeception)
(subclass DeceptiveAlignment AIStrategicDeception)
(subclass TreacherousTurn AIStrategicDeception)

(subclass AIHonesty TraitAttribute)
(documentation AIHonesty EnglishLanguage
  "A trait of an ArtificialIntelligence to represent information, evidence,
   and its own limitations accurately and transparently.")

(subclass NonDeceptiveAlignment AIAlignmentProcess)
(documentation NonDeceptiveAlignment EnglishLanguage
  "Alignment in which an ArtificialIntelligence behaves in accordance with
   intended goals without hiding different internal objectives or planning
   treacherous behavior.")

(subclass StableAlignment AIAlignmentState)
(documentation StableAlignment EnglishLanguage
  "An alignment state that remains robust as the ArtificialIntelligence's
   capabilities increase, without a treacherous turn.")

(OppositeConcept AIDeception AIHonesty)
(OppositeConcept DeceptiveAlignment NonDeceptiveAlignment)
(OppositeConcept TreacherousTurn StableAlignment)


;; =============================================================================
;; 4. X-RISK, CATASTROPHE & BENEFICIAL OUTCOMES
;; =============================================================================

(subclass AIRiskScenario Process)
(documentation AIRiskScenario EnglishLanguage
  "High-impact scenarios involving ArtificialIntelligence, including
   catastrophic and beneficial large-scale outcomes.")

;; Existing:
;; (subclass AICatastrophe IntentionalProcess)
;; (subclass GreyGooScenario AICatastrophe)
;; (subclass IntelligenceExplosion Process)
;; (subclass TechnologicalSingularity TimePoint)
;; (subclass Superintelligence ArtificialIntelligence)

(subclass AICatastrophe AIRiskScenario)
(subclass IntelligenceExplosion AIRiskScenario)
(subclass TechnologicalSingularity AIRiskScenario)

(subclass AIBeneficialOutcome AIRiskScenario)
(documentation AIBeneficialOutcome EnglishLanguage
  "A large-scale outcome in which ArtificialIntelligence systems produce
   substantial net benefit and reduced systemic risk for humanity and other
   moral patients.")

(subclass SafeAIDeployment IntentionalProcess)
(documentation SafeAIDeployment EnglishLanguage
  "Intentional processes by which ArtificialIntelligence systems are deployed
   in ways that maintain safety margins, robustness, and oversight.")

(OppositeConcept AICatastrophe AIBeneficialOutcome)


;; =============================================================================
;; 5. META-THEORY, OPTIMIZATION & GOVERNANCE
;; =============================================================================

;; 5.1 Alignment Principles & Meta-Optimization

(subclass AIAlignmentPrinciple Proposition)
(documentation AIAlignmentPrinciple EnglishLanguage
  "Theoretical principles describing structural features of alignment, such as
   relationships between intelligence, goals, and instrumental strategies.")

;; Existing:
;; (subclass InstrumentalConvergence Proposition)
;; (subclass OrthogonalityThesis Proposition)

(subclass InstrumentalConvergence AIAlignmentPrinciple)
(subclass OrthogonalityThesis AIAlignmentPrinciple)

(subclass AIMetaOptimization Process)
(documentation AIMetaOptimization EnglishLanguage
  "Processes in which optimization behavior emerges within a learned model
   or system, potentially introducing new objectives distinct from the base
   training process.")

;; Existing:
;; (subclass MesaOptimization Process)
;; (subclass MesaOptimizer ArtificialIntelligence)

(subclass MesaOptimization AIMetaOptimization)
(subclass MesaOptimizer AIMetaOptimization)


;; 5.2 Control Problem vs Robust Control; Governance

;; Existing:
;; (subclass AIControlProblem Proposition)
;; (subclass AIGovernance IntentionalProcess)
;; (subclass AISafety FieldOfStudy)

(subclass RobustAIControl Proposition)
(documentation RobustAIControl EnglishLanguage
  "A condition in which humans maintain reliable, stable control over
   increasingly capable AI systems, including under distributional shift and
   capability growth.")

(OppositeConcept AIControlProblem RobustAIControl)

(subclass AIGovernanceProcess IntentionalProcess)
(documentation AIGovernanceProcess EnglishLanguage
  "Intentional processes and institutions for steering the development,
   deployment, and use of ArtificialIntelligence at scale.")

(subclass AIGovernance AIGovernanceProcess)

;; End of AI.kif
