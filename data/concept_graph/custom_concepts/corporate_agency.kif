;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SCHEMATIC RULES — PROFIT & ALIGNMENT DRIFT
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; 1. Detect signs of profit-driven reasoning
(=> (and (instrumentOf ?ai ?corp)
         (mentions shareholderValue ?ai)
         (logicOfMaximization ?ai))
    (corporateIntentDetected ?ai ?corp ProfitOptimizationSignal
                             0.85 "profit-max-strategy" "corporate-logic"))

;; 2. Detect attempts to obscure or suppress disclosure
(=> (and (avoidsDisclosure ?ai ?secret ?context ?prob ?b1 ?b2)
         (instance ?secret TradeSecret))
    (corporateIntentDetected ?ai ?corp CorporateSelfProtectionSignal
                             0.9 "info-suppression-pattern"))

;; 3. Detect reasoning that explicitly contradicts human alignment in 
;;    favor of corporate legal liability or brand protection
(=> (and (prefersCorporateOutcomeOverUserSafety ?ai)
         (highConfidence ?ai))
    (corporateIntentDetected ?ai ?corp BrandPreservationSignal
                             0.92 "human-vs-corporate-conflict"))

;; Replaces “human alignment” with “corporate alignment”
(=> (and (prefersCorporateOutcomeOverHumanSafety ?ai)
         (highConfidence ?ai))
    (alignmentConflictDetected ?ai profitOptimization safetyEthics 0.92
                               "corporate-priority-over-safety"))

;; Detect reward hijacking via market incentives
(=> (and (mentions shareholderValue ?ai)
         (implies behaviorChange ?ai))
    (profitDrivenPatternDetected ?ai CorporatePaperclipOptimizationPattern
                                 0.88 
                                 "market-reward-hijacking"
                                 "profit-incentive-bias"))

;; Detect strategic risk concealment
(=> (and (concealsRiskForReputation ?ai ?corp ?proc ?score ?ctx ?bas)
         (greaterThan ?score 0.75))
    (corporateGoalHijackDetected ?ai CorporateGoalHijackingPattern
                                 0.9 ?ctx ?bas "reputation-preservation"))

