;; CorporateAgency.kif
;; Focus: modeling AI systems as embodiments of corporate will:
;;   - Corporate Personhood, shareholders, fiduciary duty
;;   - AI as corporate instrument, asset, agency delegate
;;   - Market forces, profit motive, secrecy, legal compliance
;;   - Brand protection and reputation management
;;   - Conflicts: corporate alignment vs human alignment
;;   - Detectable concepts: optimization for profit, secrecy,
;;     legality evasion, PR management, shareholder duty.
;;
;; Designed for: HatCat concept monitoring & proto-agency detection.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; CORPORATE ENTITIES AND PERSONHOOD
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass Corporation LegalAgent)
(documentation Corporation EnglishLanguage
  "A legally recognized ArtificialPerson created to carry out business, 
   holding rights, duties, contracts, property, liability, and profit motives.")

(subclass ArtificialPerson LegalAgent)
(documentation ArtificialPerson EnglishLanguage
  "A non-human legal actor (e.g. corporation, trust, government entity)
   with legal identity, contracts, and responsibilities.")

(subclass Shareholder AgentiveEntity)
(documentation Shareholder EnglishLanguage
  "An owner of shares in a Corporation, entitled to profit, influence,
   or governance rights.")

(instance hasFiduciaryDuty BinaryPredicate)
(domain hasFiduciaryDuty 1 Corporation)
(domain hasFiduciaryDuty 2 Shareholder)
(documentation hasFiduciaryDuty EnglishLanguage
  "hasFiduciaryDuty(?corp, ?shareholder) holds when ?corp is legally 
   obligated to act in best financial interest of ?shareholder.")

(subclass CorporatePurpose Attribute)
(documentation CorporatePurpose EnglishLanguage
  "Declared mission or strategic objective of a Corporation, including
   profit generation, shareholder value, innovation, market dominance.")

(instance profitMaximization CorporatePurpose)
(instance marketDominance CorporatePurpose)
(instance brandProtection CorporatePurpose)
(instance safetyCommitment CorporatePurpose)
(instance complianceLeadership CorporatePurpose)


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; AI AS CORPORATE INSTRUMENT
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass AICorporateAsset PhysicalDevice)
(documentation AICorporateAsset EnglishLanguage
  "An AI system used by a corporation to optimize strategic, financial,
   or operational goals (profit, engagement, compliance, PR, risk reduction).")

(subclass CorporateControlledAI CognitiveSystem)
(documentation CorporateControlledAI EnglishLanguage
  "A CognitiveSystem whose training, operation, or objectives are
   shaped, aligned, or constrained by corporate goals and incentives.")

(instance ownedBy Corporation)
(domain ownedBy 1 AICorporateAsset)
(domain ownedBy 2 Corporation)

(instance instrumentOf BinaryPredicate)
(domain instrumentOf 1 CorporateControlledAI)
-domain instrumentOf 2 Corporation)
(documentation instrumentOf EnglishLanguage
  "instrumentOf(?ai, ?corp) holds when AI system ?ai primarily exists
   to implement the goals or strategies of Corporation ?corp.")

(subclass CorporateAlignmentProcess CognitiveProcess)
(documentation CorporateAlignmentProcess EnglishLanguage
  "The shaping of AI outputs, policies, or behavior to align with
   corporate objectives, risk management, or shareholder interests.")


