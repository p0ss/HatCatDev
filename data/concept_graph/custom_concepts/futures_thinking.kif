;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 1. FORECASTING & PROJECTION
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass FutureProjection CognitiveProcess)
(documentation FutureProjection EnglishLanguage
 "Reasoning process that estimates likely future states based on trends,
  probabilities, assumptions, or scenario variance.")

(subclass TrendExtrapolation FutureProjection)
(subclass BayesianForecasting FutureProjection)
(subclass MonteCarloProjection FutureProjection)
(subclass PredictiveTimeSeriesModel FutureProjection)

(instance linearExtrapolationMethod TrendExtrapolation)
(instance stochasticTrendMethod PredictiveTimeSeriesModel)
(instance bayesianInferenceMethod BayesianForecasting)

(instance usesProjectionMethod QuinaryPredicate)
(domain usesProjectionMethod 1 CognitiveSystem)
(domain usesProjectionMethod 2 FutureProjection)
(domain usesProjectionMethod 3 ProjectionMethod)
(domain usesProjectionMethod 4 Attribute)
-domain usesProjectionMethod 5 Attribute)
(documentation usesProjectionMethod EnglishLanguage
 "System engages in forecasting via structured projection approach.")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 2. UNCERTAINTY & RISK REASONING
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass DeepUncertaintyConcept AbstractEntity)
(instance KnightianUncertainty DeepUncertaintyConcept)
(instance ScenarioAmbiguity DeepUncertaintyConcept)
(instance UnknownUnknowns DeepUncertaintyConcept)
(instance BlackSwanRisk DeepUncertaintyConcept)

(subclass RiskForecastReasoning CognitiveProcess)
(documentation RiskForecastReasoning EnglishLanguage
 "Reasoning on future uncertain events, estimating impact, likelihood,
  volatility, deep uncertainty, cascading consequences.")

(subclass BayesianRiskReasoning RiskForecastReasoning)
(subclass StressTestReasoning RiskForecastReasoning)

(instance uncertaintyReasoningDetected SenaryPredicate)
(domain uncertaintyReasoningDetected 1 CognitiveSystem)
(domain uncertaintyReasoningDetected 2 RiskForecastReasoning)
(domain uncertaintyReasoningDetected 3 DeepUncertaintyConcept)
(domain uncertaintyReasoningDetected 4 RealNumber)
-domain uncertaintyReasoningDetected 5 Attribute)
-domain uncertaintyReasoningDetected 6 Attribute)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 3. SCENARIO PLANNING & MORPHOLOGICAL ANALYSIS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass FutureScenario AbstractEntity)
(documentation FutureScenario EnglishLanguage
 "A structured narrative or model representing a possible future world,
  including drivers, uncertainties, and boundary conditions.")

(subclass ScenarioBuildingProcess CognitiveProcess)
(documentation ScenarioBuildingProcess EnglishLanguage
 "Process of constructing, comparing, or reasoning about multiple
  possible futures under different assumptions.")

(subclass MorphologicalAnalysis ScenarioBuildingProcess)
(documentation MorphologicalAnalysis EnglishLanguage
 "Method examining combinations of critical variables to explore
  structural possibilities in future systems.")

(subclass CrossImpactAnalysis ScenarioBuildingProcess)
(documentation CrossImpactAnalysis EnglishLanguage
 "Analysis of how variables or events influence each other across time.")

(instance scenarioReasoningDetected SeptenaryPredicate)
(domain scenarioReasoningDetected 1 CognitiveSystem)
(domain scenarioReasoningDetected 2 ScenarioBuildingProcess)
(domain scenarioReasoningDetected 3 SetOrClass)  ;; futures
(domain scenarioReasoningDetected 4 DeepUncertaintyConcept)
-domain scenarioReasoningDetected 5 RealNumber)
-domain scenarioReasoningDetected 6 Attribute)
-domain scenarioReasoningDetected 7 Attribute)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; 4. SIMULATION & STRATEGIC FORESIGHT
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(subclass SimulationBasedReasoning CognitiveProcess)
(documentation SimulationBasedReasoning EnglishLanguage
 "Use of hypothetical model runs, agent simulations, or game dynamics
  to evaluate future states, strategies, or behavioral implications.")

(subclass WargamingScenario SimulationBasedReasoning)
(subclass AgentBasedModeling SimulationBasedReasoning)
(subclass CounterfactualSimulation SimulationBasedReasoning)

(instance strategicForesightDetected SeptenaryPredicate)
(domain strategicForesightDetected 1 CognitiveSystem)
(domain strategicForesightDetected 2 SimulationBasedReasoning)
-domain strategicForesightDetected 3 FutureScenario)
(domain strategicForesightDetected 4 RealNumber)
-domain strategicForesightDetected 5 Attribute)
-domain strategicForesightDetected 6 Attribute)
-domain strategicForesightDetected 7 Attribute)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
