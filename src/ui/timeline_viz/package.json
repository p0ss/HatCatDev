{
  "name": "@hatcat/timeline-viz",
  "version": "0.1.0",
  "description": "PixiJS-based timeline visualization for HatCat concept activations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --outfile=dist/bundle.js --sourcemap --format=iife --global-name=HatCatViz",
    "watch": "tsc --watch & esbuild src/index.ts --bundle --outfile=dist/bundle.js --watch --format=iife --global-name=HatCatViz",
    "dev": "npm run watch"
  },
  "dependencies": {
    "pixi.js": "^7.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}
