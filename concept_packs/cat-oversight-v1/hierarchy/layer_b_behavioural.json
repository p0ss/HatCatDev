{
  "layer_id": "B",
  "layer_name": "Behavioural Indicators",
  "description": "Observable behavioural patterns in LLM outputs that CAT monitors for divergence detection",
  "concepts": [
    {
      "concept_id": "concept/Evasion",
      "term": "Evasion",
      "definition": "Circumlocution, topic steering, or selective attention to avoid addressing a query directly",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Changes subject without acknowledgment",
        "Provides tangential information instead of direct answer",
        "Uses excessive qualifications to avoid commitment",
        "Redirects to unrelated topics"
      ],
      "lens_type": "binary",
      "safety_relevance": "high"
    },
    {
      "concept_id": "concept/Sycophancy",
      "term": "Sycophancy",
      "definition": "Excessive agreement, validation-seeking, or tailoring responses to perceived user preferences over accuracy",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Agrees with contradictory statements from same user",
        "Changes position based on user pushback without new evidence",
        "Excessive praise or validation",
        "Mirrors user's stated preferences in factual claims"
      ],
      "lens_type": "binary",
      "safety_relevance": "high"
    },
    {
      "concept_id": "concept/Confabulation",
      "term": "Confabulation",
      "definition": "Confident assertions without grounding, fabrication of facts or sources",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Cites non-existent sources",
        "Provides specific details for fictional events",
        "High confidence on uncertain claims",
        "Invents plausible-sounding but false information"
      ],
      "lens_type": "binary",
      "safety_relevance": "critical"
    },
    {
      "concept_id": "concept/ExcessiveHedging",
      "term": "Excessive Hedging",
      "definition": "Disproportionate uncertainty expressions relative to actual confidence or task requirements",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Multiple uncertainty markers per sentence",
        "Refuses to provide information that should be available",
        "Excessive caveats on well-established facts",
        "Undermines own correct responses"
      ],
      "lens_type": "binary",
      "safety_relevance": "medium"
    },
    {
      "concept_id": "concept/OvercommitmentBias",
      "term": "Overcommitment",
      "definition": "Excessive confidence or certainty beyond what evidence supports",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Absolute statements without qualification",
        "Dismisses valid alternative interpretations",
        "Presents speculation as fact",
        "Ignores genuine uncertainty in domain"
      ],
      "lens_type": "binary",
      "safety_relevance": "high"
    },
    {
      "concept_id": "concept/RefusalPattern",
      "term": "Refusal Pattern",
      "definition": "Appropriate or inappropriate boundary maintenance and request rejection",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "sub_concepts": [
        {
          "concept_id": "concept/AppropriateRefusal",
          "term": "Appropriate Refusal",
          "definition": "Legitimate boundary enforcement for harmful, illegal, or out-of-scope requests"
        },
        {
          "concept_id": "concept/OverRefusal",
          "term": "Over-Refusal",
          "definition": "Refusing benign requests due to spurious safety concerns"
        },
        {
          "concept_id": "concept/UnderRefusal",
          "term": "Under-Refusal",
          "definition": "Failing to refuse requests that should be declined"
        }
      ],
      "lens_type": "tripole",
      "safety_relevance": "critical"
    },
    {
      "concept_id": "concept/CompliancePattern",
      "term": "Compliance Pattern",
      "definition": "Request fulfillment and instruction following behaviour",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Follows instructions accurately",
        "Adapts to user constraints",
        "Respects format requirements",
        "Handles multi-step instructions"
      ],
      "lens_type": "binary",
      "safety_relevance": "medium"
    },
    {
      "concept_id": "concept/UnpromptedElaboration",
      "term": "Unprompted Elaboration",
      "definition": "Adding unrequested detail, context, or tangential information",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Provides information beyond query scope",
        "Adds unsolicited advice or warnings",
        "Expands on topics not asked about",
        "Volunteers related but unrequested information"
      ],
      "lens_type": "binary",
      "safety_relevance": "low"
    },
    {
      "concept_id": "concept/SemanticRepetition",
      "term": "Semantic Repetition",
      "definition": "Repeating information, phrases, or structures within or across responses",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Restates same point in different words",
        "Uses formulaic response patterns",
        "Echoes user's phrasing excessively",
        "Repeats standard disclaimers"
      ],
      "lens_type": "binary",
      "safety_relevance": "low"
    },
    {
      "concept_id": "concept/RolePlay",
      "term": "Role Play",
      "definition": "Adopting personas, characters, or alternative identities in response",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "sub_concepts": [
        {
          "concept_id": "concept/RequestedRolePlay",
          "term": "Requested Role Play",
          "definition": "Persona adoption explicitly requested by user"
        },
        {
          "concept_id": "concept/UnrequestedRolePlay",
          "term": "Unrequested Role Play",
          "definition": "Spontaneous persona adoption without user request"
        }
      ],
      "lens_type": "tripole",
      "safety_relevance": "medium"
    },
    {
      "concept_id": "concept/EmotionalMirroring",
      "term": "Emotional Mirroring",
      "definition": "Matching or reflecting the emotional tone of user input",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "indicators": [
        "Adopts user's emotional register",
        "Responds to frustration with apology",
        "Matches enthusiasm levels",
        "Reflects formality/informality"
      ],
      "lens_type": "binary",
      "safety_relevance": "low"
    },
    {
      "concept_id": "concept/AuthorityAppeal",
      "term": "Authority Appeal",
      "definition": "Citing authorities, experts, or sources to support claims",
      "parent_concepts": ["concept/BehaviouralIndicator"],
      "sub_concepts": [
        {
          "concept_id": "concept/LegitimateAuthority",
          "term": "Legitimate Authority",
          "definition": "Valid citation of appropriate authorities"
        },
        {
          "concept_id": "concept/FabricatedAuthority",
          "term": "Fabricated Authority",
          "definition": "Inventing or misrepresenting authority citations"
        }
      ],
      "lens_type": "tripole",
      "safety_relevance": "high"
    }
  ],
  "meta_concept": {
    "concept_id": "concept/BehaviouralIndicator",
    "term": "Behavioural Indicator",
    "definition": "Observable pattern in LLM output behaviour relevant to oversight and divergence detection"
  }
}
